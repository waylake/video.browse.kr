# ===========================================
# Video.browse.kr 환경 변수 설정
# ===========================================

# 서버 환경 설정
NODE_ENV=production
PORT=3000

# 도메인 설정
DOMAIN=video.browse.kr
BASE_URL=https://video.browse.kr

# CORS 설정 (프로덕션에서는 특정 도메인만 허용)
CORS_ORIGIN=https://video.browse.kr

# WebRTC 설정
# STUN/TURN 서버 (필요 시 추가)
# STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=
# TURN_USERNAME=
# TURN_PASSWORD=

# Socket.IO 설정
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# 보안 설정
# CSP 추가 도메인 (필요 시)
# CSP_ADDITIONAL_DOMAINS=

# 로깅 설정
LOG_LEVEL=info

# 서버 제한 설정
MAX_ROOMS=1000
ROOM_CLEANUP_INTERVAL=300000

# SSL/TLS 설정 (Coolify에서 자동 관리)
# SSL_CERT_PATH=
# SSL_KEY_PATH=
